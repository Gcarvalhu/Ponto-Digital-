    <section>
        <div class="fundo_cadastro">
            <div id="cadastro_box">
                <div id="login-box-interno">
                    <div id="login-box-label">Cadastro</div>
                    <form method="POST" action="Cadastro/Cadastrar">
                    <fieldset>
                        <label class="nome" for="nome">Nome Completo</label> <!--NOME-->
