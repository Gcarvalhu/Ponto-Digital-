                        <br />
                        <input name="telefone" id="telefone" type="tel" required />
                        <br />
                        <label class="email" for="email">E-mail</label><!--EMAIL-->
                        <br />
                        <input name="email" id="email" type="email" required />
                        <br />
                        <label class="senha" for="senha">Senha</label>
                        <br />
                        <input name="senha" id="senha" type="password" />
                        <br>
                        <label for="data-nascimento">Data de nascimento</label>
                        <br />
                        <input id="data-nascimento" type="date" name="data-nascimento" />
                        <br />
                        <input id="btn_submit" type="submit" value="Cadastrar">
                    </fieldset>
                </form>
            </div>
        </div>
        </div>
        </div>
